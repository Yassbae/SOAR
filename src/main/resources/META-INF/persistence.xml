<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="bankeasePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>ch.unil.doplab.bankease.domain.Client</class>
        <class>ch.unil.doplab.bankease.domain.Employee</class>
        <class>ch.unil.doplab.bankease.domain.Account</class>
        <class>ch.unil.doplab.bankease.domain.Transaction</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>

            <!-- MySQL LOCAL -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://mysql:3306/bankease?useSSL=false&amp;serverTimezone=UTC"/>

            <property name="jakarta.persistence.jdbc.user" value="bankease"/>
            <property name="jakarta.persistence.jdbc.password" value="bankease"/>

            <!-- CrÃ©ation auto des tables -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create"/>

            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.classloader" value="current"/>
        </properties>
    </persistence-unit>

</persistence>
